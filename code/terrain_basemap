import matplotlib.pyplot as plt
from PIL import Image
import cartopy.crs as ccrs

# Open image file
img = Image.open("/Users/anabellebrodsky/Desktop/NASA/ADMG/blueMarble.png")

projection = ccrs.PlateCarree()

fig, ax = plt.subplots(figsize=(12, 9), subplot_kw={'projection': projection})

# Display the image
ax.imshow(img, origin='upper', transform=projection, extent=[-180, 180, -90, 90])

plt.show()

















